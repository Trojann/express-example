extends ../layouts/common
block content
	h1 Create user 
	if errors 
		each error in errors
			.alert.alert-danger= error
	form(action='/users/create', method='POST')
		.form-group
			label Name
			input.form-control(name='name', type='text' value=value ? value.name : '')
			label Phone
			input.form-control(name='phone', type='text' value=value ? value.phone : '')
		button.btn.btn-primary Create