extends ../layouts/common
block content
	h1 Create user 
	if errors 
		each error in errors
			.alert.alert-danger= error
	form(action='/users/create', method='POST', enctype='multipart/form-data')
		.form-group
			label Name
			input#name.form-control(name='name', type='text' value=value ? value.name : '')
			label Phone
			input#phone.form-control(name='phone', type='text' value=value ? value.phone : '')
			label Avatar
			input#avatar.form-control-file(name='avatar', type='file')
		button.btn.btn-primary Create